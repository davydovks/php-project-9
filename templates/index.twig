{% extends "layout.twig" %}

{% set headerParams = {'activePage': 'home'} %}

{% block flash %}
    {% include 'blocks/flash.twig' with messages %}
{% endblock %}

{% block content %}
<div class="container-lg mt-3">
    <div class="row">
        <div class="col-12 col-md-10 col-lg-8 mx-auto border rounded-2 bg-light p-5">
            <h1 class="display-3">Анализатор страниц</h1>
            <p class="lead">Бесплатно проверяйте сайты на SEO пригодность</p>
            <form action="/urls" method="post" class="row mb-3" required="">
                <div class="col-8 position-relative">
                    <input type="text" name="url[name]" value="{{ url.name }}" class="form-control form-control-lg{{ errors.name is defined ? ' is-invalid' : '' }}" placeholder="https://www.example.com">
                    <div class="invalid-feedback">{{ errors.name ?? '' }}</div>
                </div>
                <div class="col-2">
                    <input type="submit" class="btn btn-primary btn-lg mx-3 px-5 text-uppercase" value="Проверить">
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
