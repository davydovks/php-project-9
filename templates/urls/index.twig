{% extends "layout.twig" %}

{% set headerParams = {'activePage': 'urls'} %}

{% block flash %}
    {% include 'flash.twig' with messages %}
{% endblock %}

{% block content %}
<div class="container-lg mt-3">
    <div class="row">
        <h1>Сайты</h1>
        <div class="table-responsive">
            <table class="table table-bordered table-hover text-nowrap" data-test="urls">
                <tbody>
                    <tr>
                        <th>ID</th>
                        <th>Имя</th>
                        <th>Последняя проверка</th>
                        <th>Код ответа</th>
                    </tr>
                    {% for url in urls %}
                    <tr>
                        <td>{{ url.id }}</td>
                        <td>
                            <a href="/urls/{{ url.id }}">
                                {{ url.name }}
                            </a>
                        </td>
                        <td>{{ url.lastCheckAt }}</td>
                        <td>{{ url.lastCheckStatus }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
